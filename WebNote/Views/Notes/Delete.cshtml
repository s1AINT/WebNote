@model WebNote.Entity.Note

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Видалення нотатки</h2>

            <p>Ви впевнені, що хочете видалити нотатку з назвою "@Model.Title"?</p>

            @using (Html.BeginForm("DeleteConfirmed", "Notes", new { id = Model.Id }))
            {
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Видалити</button>
                    <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Notes")'">Скасувати</button>
                </div>
            }
        </div>
    </div>
</div>
